

[module/disk]
type = internal/fs
mount-0 = /
interval = 30
fixed-values = false
spacing = 2
format-mounted = <label-mounted>
label-mounted = %free% (%percentage_free%%)
label-mounted-foreground = ${colors.blue} 

[module/traffic]
type = internal/network
interface = ${vars.ethernet} 
interval = 2
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = down %downspeed:7% up %upspeed:7%
label-connected-foreground = ${colors.bcyan}
label-disconnected = NO CONNECTION??
label-disconnected-foreground = ${colors.red}

[module/net]
type = internal/network
interface = ${vars.ethernet}
interval = 5
format-connected = <label-connected>
format-disconnected = <label-disconnected>
;format-packetloss = 

label-connected = %local_ip% @ %linkspeed% 
label-connected-foreground = ${colors.bmagenta}
label-disconnected = FUUUUUU
label-disconnected-foreground = ${colors.bred} 

[module/cpu]
type = internal/cpu
interval = 2
format = <label>
label = CPU: %percentage%%
label-foreground = ${colors.magenta}

[module/time]
type = internal/date
interval = 1.0
date = %Y-%m-%d%
time = %H:%M:%S
format = <label>
format-font = 3
format-background = ${colors.background}
format-foreground = ${colors.blue}
label = %date% %time%
;label-foreground = 


[module/ram]
type = internal/memory
interval = 2
format = <label> <bar-used>
format-font = 4
format-foreground = ${colors.byellow} 
#label = R:%gb_used%/%gb_free%
label = RAM
bar-used-indicator = 
bar-used-width = 15
bar-used-foreground-0 = ${colors.green} 
bar-used-foreground-1 = ${colors.cyan}
bar-used-foreground-2 = ${colors.yellow}
bar-used-foreground-3 = ${colors.red}
bar-used-fill = ▐
bar-used-empty = ▐
bar-used-empty-foreground = ${colors.bblack}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
format-font = 2
pin-workspaces = true
enable-scroll = false
enable-click = false
label-mode = %mode%
label-mode-background = ${colors.background}
label-mode-foreground = ${colors.magenta}


label-focused = %index%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.green}
label-unfocused = %index%
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}

label-urgent = !%index%
label-urgent-foreground = ${colors.red}

label-separator = |
label-separator-padding = 1
label-separator-foreground = ${colors.bblack}


